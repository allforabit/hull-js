{{#if working}}
  <button class="btn">
    Loading... 
  </button>
{{else}}
  {{#if liked}}
    <button data-hull-action="unlike" data-hull-id="{{options.id}}" class="btn btn-danger">
      <i class="icon-heart"></i> ({{likes}})
    </button>
  {{else}}
    <button data-hull-action="like" data-hull-id="{{options.id}}" class="btn">
      <i class="icon-heart"></i> ({{likes}})
    </button>
  {{/if}}
{{/if}}
