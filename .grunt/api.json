{
  "namespace": "Hull",
  "coffeeFiles": ["src/hull.api.coffee", "src/api/**/*.coffee",  "src/utils/**/*.coffee"],
  "requireJS": {
    "baseUrl": ".",
    "preserveLicenseComments": false,
    "paths": {
      "requireLib":     "bower_components/requirejs/require",
      "underscore":     "bower_components/underscore/underscore",
      "eventemitter":   "bower_components/eventemitter2/lib/eventemitter2",
      "easyXDM":        "lib/shims/bower_components/easyXDM/easyXDM",
      "cookie":         "bower_components/cookies-js/src/cookies",
      "q":              "bower_components/q/q",
      "base64":         "bower_components/base64/base64"
    },
    "shim": {
      "underscore": { "exports": "_" },
      "easyXDM":    { "exports": "easyXDM" }
    },
    "include": [
      "requireLib",
      "underscore",
      "easyXDM",
      "cookie",
      "base64",
      "lib/hull.api"
      ],
    "out": "dist/<%= PKG_VERSION %>/hull.api.js",
    "wrap": {
      "start": "(function(){       var require, requirejs, define, root={}; (function () {",
      "end": ";  }).call(root);})();"
    }
  }
}

