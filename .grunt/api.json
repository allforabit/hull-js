{
  "namespace": "Hull",
  "coffeeFiles": ["src/hull.api.coffee", "src/bootstrap.coffee", "src/api/**/*.coffee",  "src/utils/**/*.coffee"],
  "requireJS": {
    "baseUrl": ".",
    "preserveLicenseComments": true,
    "paths": {
      "requireLib":     "bower_components/almond/almond",
      "underscore":     "bower_components/underscore/underscore",
      "eventemitter":   "bower_components/eventemitter2/lib/eventemitter2",
      "xdm":            "bower_components/xdm.js/xdm",
      "cookie":         "bower_components/cookies-js/src/cookies",
      "promises":       "bower_components/q/q",
      "base64":         "bower_components/base64/base64",
      "domready":       "bower_components/domready/ready"
    },
    "shim": {
      "underscore": { "exports": "_" }
    },
    "include": [
      "requireLib",
      "underscore",
      "cookie",
      "base64",
      "domready",
      "lib/hull.api"
      ],
    "out": "dist/<%= PKG_VERSION %>/hull.api.js",
    "wrap": {
      "start": "(function(){       var require, requirejs, define, root={}; (function () {",
      "end": "; window.Hull = require('lib/hull.api'); }).call(root);})();"
    }
  }
}

