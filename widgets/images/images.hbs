{{#unless authorized.provider}}
    You need to login.
    <a class='btn' data-hull-action="login" data-hull-provider="{{authorized.provider_name}}">Login to {{classify authorized.provider_name}}</a>
{{else}}
  {{#unless authorized.permissions}}
    You need to give permissions to show these images.
    <a class='btn' data-hull-action="authorize">Authorize</a>
  {{else}}
    <div class="hull-images">
      {{#if images}}
        <ul class="media-list">
          {{#each images}}
            <li class="media">
              <a class="pull-left" href="#">
                <img src="{{picture}}" alt="{{name}}" width="200" height="200">
              </a>
              <div class="media-body">
                <h4 class="media-heading">{{name}}</h4>
              </div>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <div class="hull-empty">
          <p>Oopsâ€¦ No images for the moment</p>
        </div>
      {{/if}}
    </div>
  {{/unless}}
{{/unless}}

