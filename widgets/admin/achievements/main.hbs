<h3>Achievements</h3>
<div>
  <h4>Create an achievement</h4>
  {{#if error}}
  <div class="alert">
    An error occured.
  </div>
  {{/if}}
  <form class="form-horizontal" action="#">
    <div class="control-group">
      <label class="control-label" for="name">Name</label>
      <div class="controls">
        <input id="name" type="text" name="name" />
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="description">Description</label>
      <div class="controls">
        <input id="description" type="text" name="description" />
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="secret">Secret</label>
      <div class="controls">
        <input id="type" type="text" name="secret" />
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <button class="btn" type="submit">Create</button>
      </div>
    </div>
  </form>
</div>
<div>
  <h4>Achievements for the app {{app.name}}</h4>
  <table class="table">
    <thead>
      <tr>
        <td>id</td>
        <td>name</td>
        <td>description</td>
        <td>secret</td>
      </tr>
    </thead>
    <tbody>
      {{#achievements}}
      <tr>
        <td>{{id}}</td>
        <td>{{name}}</td>
        <td>{{description}}</td>
        <td>{{secret}}</td>
        <td><i data-hull-action="remove" data-hull-achievement-id="{{id}}" class="pull-right icon icon-remove"></i></td>
      </tr>
      {{/achievements}}
      {{^achievements}}
      <tr>
        <td colspan=5>
          <div class="text-center">
            None
          </div>
        </td>
      </tr>
      {{/achievements}}
    </tbody>
  </table>
</div>

