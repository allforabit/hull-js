<div class="hull-quiz_admin">

  <form id="hull-quiz_admin__form" class="hull-form hull-quiz_admin__form">

    <div class="hull-quiz_admin__header">
      <h1>
        <input name="name" class="hull-form__text-input" type="text" value="{{quiz.name}}" placeholder="Enter a name" />
      </h1>
      <p>
        <input name="description" class="hull-form__text-input" type="text" value="{{quiz.description}}" placeholder="Enter a description" />
      </p>
    </div>

    <ol class="hull-form__fields">

      {{! questions }}
      {{#each quiz.questions}}
        <li class="hull-form__fields__item" data-hull-question-id="{{id}}">

          <div class="hull-quiz_admin__details">
            <button class="hull-btn" data-hull-action="deletequestion">&times;</button>
            <h3>Details</h3>

            <label class="hull-form__label">Name</label>
            <input name="detail-name" class="hull-form__text-input" type="text" value="{{name}}" placeholder="Enter a name" />

            <label class="hull-form__label">Description</label>
            <input name="detail-description" class="hull-form__text-input" type="text" value="{{description}}" placeholder="Enter a description" />
          </div>

          <div class="hull-quiz_admin__choices">
            <h3>Choices</h3>

            <table>
              <thead>
                <tr>
                  <td>
                    Title
                  </td>
                  <td>
                    Description
                  </td>
                  <td>
                    Points
                  </td>
                  <td>

                  </td>
                </tr>
              </thead>
              <tbody>
                {{#each answers}}
                  <tr data-hull-answer-id="{{id}}">
                    <td>
                      <input name="answer-name" class="hull-form__text-input" type="text" value="{{name}}" placeholder="Titre" />
                    </td>
                    <td>
                      <input name="answer-description" class="hull-form__text-input" type="text" value="{{description}}" placeholder="Description" />
                    </td>
                    <td>
                      <input name="answer-weight" class="hull-form__text-input" type="number" value="{{weight}}" placeholder="Points" />
                    </td>
                    <td>
                      <button class="hull-btn" data-hull-action="deleteitem">&times;</button>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>

            {{! add a new choice }}
            <button class="hull-btn" data-hull-action="addchoice">Add choice</button>

          </div>
        </li>
      {{/each}}


      {{! add a new question }}
      <li class="hull-form__fields__item--add">
        <button class="hull-btn"  data-hull-action="addquestion">Add question</button>
      </li>

      {{! submit form }}
      <li class="hull-form__fields__item--submit">
        <button data-hull-action="submit" class="hull-btn">Save</button>
      </li>

    </ol>
  </form>

</div>


