<div class="hull-quiz_admin">

  <form id="hull-quiz_admin__form" class="hull-form hull-quiz_admin__form">
    <ol class="hull-form__fields">

      <li class="hull-form__fields__item--add">
        <button class="hull-btn"  data-hull-action="addquestion">Add question</button>
      </li>

      <li class="hull-form__fields__item--submit">
        <button type="submit" class="hull-btn">Save</button>
      </li>

    </ol>
  </form>

</div>


{{! Templates }}
<script id="quiz_admin_question" type="text/x-handlebars-template">
  <li class="hull-form__fields__item">

    <input class="hull-form__text-input" type="text" placeholder="Enter a question" />
    <span class="hull-quiz_admin__delete" data-hull-action="deleteitem">&times;</span>

    <ul class="hull-form__fields">
      <li class="hull-form__fields__item">
        <input class="hull-form__text-input" type="text" placeholder="Enter a choice" />
        <span class="hull-quiz_admin__delete" data-hull-action="deleteitem">&times;</span>
      </li>
      <li class="hull-form__fields__item--add--choice">
        <button class="hull-btn" data-hull-action="addchoice">Add choice</button>
      </li>
    </ul>

  </li>
</script>

<script id="quiz_admin_choice" type="text/x-handlebars-template">
  <li class="hull-form__fields__item">
    <input class="hull-form__text-input" type="text" placeholder="Enter a choice" />
    <span class="hull-quiz_admin__delete" data-hull-action="deleteitem">&times;</span>
  </li>
</script>