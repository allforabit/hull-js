<ul class="hull-activity">
  {{#each activities}}
    <li class="hull-media hull-activity__item hull-activity__item--{{verb}}">
      {{#if actor.picture}}
        <div class="hull-media__img">
            <img src="{{actor.picture}}"/>
        </div>
      {{/if}}
      <div class="hull-media__body">
        <h3 class="hull-activity__summary">
          <span class="hull-activity__summary__actor">{{actor.name}}</span>
          <span class="hull-activity__summary__verb">{{verb}}</span>
          <span class="hull-activity__summary__object">{{object.type}} - {{object.name}}</span>
          <span class="hull-activity__summary__target">{{target.name}}</span>
        </h3>

        <div class="hull-activity__content hull-activity__content--{{object.type}}">
          <div class="hull-media">
            <div class="hull-media__img">
                {{#target}}
                  <div class="hull-activity__meta__target hull-activity__meta__target--{{type}}">
                     <img src="{{imageUrl id "thumb"}}"/>
                  </div>
                {{/target}}
            </div>
            <div class="hull-media__body">
               {{#object}}
                  <div class="hull-activity__content__object">
                    <img src="{{imageUrl id "original"}}"/>
                    <h4 class="hull-activity__content__object__name">{{name}}</h4>
                  </div>
                {{/object}}
                {{#if content}}
                  <div class="hull-activity__content__content">
                    {{content}}
                  </div>
                {{/if}}
            </div>
          </div>
        </div>
        <div class="hull-activity__meta">
          {{#if target.picture}}
            <img class="hull-activity__meta__target--icon" src="{{target.picture id "thumb"}}">
          {{/if}}
          <span class="hull-activity__meta__date">{{fromNow published}}</span>
        </div>
      </div>
    </li>
  {{/each}}
  {{#unless activities}}
    <li class="hull-media hull-activity__item hull-activity__item--empty">No activity</li>
  {{/unless}}
</ul>

<div class="hull-navigation">
  {{#if isPaged}}
    <div class="hull-pager__content">
      <button data-hull-action="previousPage" class="hull-btn">&larr; Previous</button>
      <button data-hull-action="nextPage" class="hull-btn">Next &rarr;</button>
    </div>
  {{else}}
    <button data-hull-action="fetchMore" class="hull-btn">Fetch more...</button>
  {{/if}}
</div>
